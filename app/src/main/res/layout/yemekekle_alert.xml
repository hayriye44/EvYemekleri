<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="Yemek Ekleyebilirsiniz"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tvKatSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Seçiniz:"
            android:textSize="17dp"
            android:layout_margin="5dp"/>
        <Spinner
            android:id="@+id/katSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/etYemekAdi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:hint="Yemek Adını Giriniz"
    />
    <EditText
        android:id="@+id/yemekMiktar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Yemek Miktarını Giriniz"
        />
    <EditText
        android:id="@+id/yemekFiyat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Yemek Fiyatını Giriniz"
        />
    <ImageView
        android:id="@+id/ivYemekResim"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Resim Seçiniz:"
        android:layout_margin="5dp"
        android:textSize="17dp"/>
    <Button
        android:id="@+id/btnResimSec"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:text="Yemeğin Resmini Seç"
        android:background="@color/pembe"/>

    </LinearLayout>

        <Button
            android:id="@+id/btnYemekEkle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="Yemeği Ekle"
            android:background="@color/primary_light"/>




</LinearLayout>